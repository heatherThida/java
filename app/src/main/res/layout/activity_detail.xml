<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="streetconnect.DetailActivity">

    <TextView
        android:layout_width="match_parent"
        android:gravity="start"
        android:layout_height="wrap_content"
        android:text="Notification from:"
        android:id="@+id/thisIsFrom"
        android:textColor="#9e9e9e"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Provider Name here "
        android:id="@+id/fromField"
        android:textSize="15dp"
        android:textColor="#212121"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/mapsButton"
        android:layout_toEndOf="@+id/mapsButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="View In Maps"
        android:id="@+id/mapsButton"
        android:layout_below="@+id/fromField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Form"
        android:id="@+id/rsvpButton"
        android:layout_alignTop="@+id/mapsButton"
        android:layout_alignRight="@+id/thisIsFrom"
        android:layout_alignEnd="@+id/thisIsFrom" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Sample text for notification goes here."
        android:id="@+id/content"
        android:layout_below="@+id/mapsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:textSize="16dp"
        android:backgroundTint="#e8e8e8"
        android:linksClickable="true"
        android:nestedScrollingEnabled="true"
        android:autoText="false" />

</RelativeLayout>
